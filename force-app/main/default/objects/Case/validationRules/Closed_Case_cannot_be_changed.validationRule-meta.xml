<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Closed_Case_cannot_be_changed</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISCHANGED(Status),IsClosed = true, NOT($Profile.Name=&quot;System Administrator&quot;))</errorConditionFormula>
    <errorMessage>Closed cases cannot be changed.</errorMessage>
</ValidationRule>
